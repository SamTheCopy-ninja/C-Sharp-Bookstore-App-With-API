@model List<Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to RS Books</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .store {
            background-color: #f8f9fa;
            color: #333;
            text-align: center;
            padding: 20px 0;
            font-family: 'Arial', sans-serif;
            font-weight: bold;
        }


        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            text-align: center;
        }

            nav ul li {
                display: inline;
                margin-right: 20px;
            }

                nav ul li a {
                    color: #fff;
                    text-decoration: none;
                    font-weight: bold;
                }

        .jumbotron {
            background-color: #f8f9fa;
            padding: 0.5rem;
            border-radius: 5px;
            margin-top: 20px;
        }

            .jumbotron h1 {
                color: #007bff;
                font-size: 1rem;
            }

            .jumbotron p {
                font-size: 1rem;
                margin-top: 20px;
            }

            .jumbotron form {
                margin-top: 10px;
            }

        body {
            background-image: url('https://wallpaperaccess.com/full/922681.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        h3{
            font-size: 20px;
            color: white;
            background-color: black;
        }

        #result{
            color: white;
            font-size: 30px;
            background-color: black;
        }
    </style>
</head>
<body>
    <header class="store">
        <h1>Welcome to RS Book Store</h1>
    </header>

    <div class="container">
        <div class="jumbotron" style="padding: 1rem; font-size: 1rem;">
            <h1 class="display-4">Discover Amazing Deals!</h1>
            <p class="lead">Explore our wide range of products and find exactly what you need.</p>
            <hr class="my-4">
            <p>Browse through our categories or search for specific items.</p>

            <form asp-controller="Home" asp-action="Index" method="get" class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search for books..." name="searchString" aria-label="Search" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>


    @if (Model.Any())
    {
        <h3 class="text-center">Featured Books</h3>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title <i class="fas fa-book"></i></h5>
                            <p class="card-text"><i class="fas fa-user"></i> @book.Author</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-dollar-sign"></i>@book.Price </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p id="result" class="text-center">No books found at the moment. <i class="fas fa-sad-tear"></i> API not detected</p>
    }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>

</body>
</html>
